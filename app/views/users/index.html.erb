<% provide(:title, 'All users') %>
<% provide(:path, users_path) %>
<% provide(:search_name, 'User search') %>
<h1>All users</h1>

<div class="row">
  <div class="search_form">
    <%= render 'shared/search_form' %>
  </div>
</div>

<%= paginate @users %>

<% unless @users.empty? %>
  <ul class="users">
    <%= render @users %>
  </ul>
<% else %>
  <p>
    Couldn't find any user.<br>
    Please check username you are looking for.
  </p>
<% end %>

<%= paginate @users %>